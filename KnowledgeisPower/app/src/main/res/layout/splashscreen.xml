<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/splash1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/alphaK"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="63dp"
        android:src="@drawable/splash" />

    <ImageView
        android:contentDescription="@string/letterI"
        android:id="@+id/splash3"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash3" />

    <ImageView
        android:id="@+id/splash2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/endP"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/splash3"
        android:layout_marginEnd="63dp"
        android:src="@drawable/splash2" />
</RelativeLayout>